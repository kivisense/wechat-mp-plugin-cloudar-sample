.layer {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
}

.button {
  width: fit-content;
  margin: 10rpx auto;
  background: #000000;
  padding: 12rpx;
  color: #ffffff;
}

.text {
  text-align: center;
  white-space: pre-wrap;
  color: white;
}

.gift {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 500rpx;
  height: 500rpx;
  z-index: 999;
}
